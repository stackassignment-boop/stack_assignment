generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL")
}

model User {
  id          String    @id @default(cuid())
  email       String    @unique
  password    String
  name        String?
  phone       String?
  role        String    @default("customer")
  avatar      String?
  isActive    Boolean   @default(true)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  blogPosts   Blog[]
  inquiries   Inquiry[]
  orders      Order[]
}

model Order {
  id              String    @id @default(cuid())
  orderNumber     String    @unique
  customerId      String
  title           String
  description     String
  subject         String
  pages           Int
  deadline        DateTime
  deadlineTime    String    @default("12:00")
  service         String    @default("writing")
  coupon          String?
  totalPrice      Float     @default(0)
  status          String    @default("pending")
  paymentStatus   String    @default("pending_quote")
  attachments     String?   // JSON string with file URLs from Vercel Blob
  notes           String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  customer        User      @relation(fields: [customerId], references: [id], onDelete: Cascade)
}

model Service {
  id               String   @id @default(cuid())
  title            String
  slug             String   @unique
  description      String
  shortDescription String?
  icon             String?
  image            String?
  features         String?
  pricing          String?
  isActive         Boolean  @default(true)
  order            Int      @default(0)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

model Blog {
  id            String    @id @default(cuid())
  title         String
  slug          String    @unique
  excerpt       String?
  content       String
  featuredImage String?
  category      String?
  tags          String?
  authorId      String
  isPublished   Boolean   @default(false)
  publishedAt   DateTime?
  viewCount     Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  author        User      @relation(fields: [authorId], references: [id], onDelete: Cascade)
}

model Inquiry {
  id          String    @id @default(cuid())
  name        String
  email       String
  phone       String?
  subject     String?
  message     String
  status      String    @default("new")
  priority    String    @default("normal")
  source      String    @default("website")
  assignedTo  String?
  notes       String?
  respondedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User?     @relation(fields: [assignedTo], references: [id])
}

model Sample {
  id            String   @id @default(cuid())
  title         String
  slug          String   @unique
  description   String?
  subject       String?
  academicLevel String?
  paperType     String?
  pages         Int?
  content       String?
  fileUrl       String?
  isPublished   Boolean  @default(true)
  viewCount     Int      @default(0)
  downloadCount Int      @default(0)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  fileData      Bytes?
  fileName      String?
  fileSize      Int?
  fileType      String?
}

model Testimonial {
  id            String   @id @default(cuid())
  customerName  String
  customerTitle String?
  avatar        String?
  rating        Int      @default(5)
  content       String
  isApproved    Boolean  @default(false)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model PricingTier {
  id            String   @id @default(cuid())
  name          String
  academicLevel String
  pricePerPage  Float
  currency      String   @default("INR")
  description   String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Setting {
  id          String   @id @default(cuid())
  key         String   @unique
  value       String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
